<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/view_with_background"
    tools:context="com.example.kharkov.radioant.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/buttons_container1"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:divider="@drawable/spacer_medium"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:background="#6d177e"
        android:alpha="0.9"
        android:layout_marginTop="12dp">

        <ImageView
            android:paddingLeft="10dp"
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:src="@drawable/kiss"/>

        <Button
            android:id="@+id/button1"
            android:textColor="#f8dbf9"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:alpha="0.9"
            android:text="KISS FM" />
    </LinearLayout>
    <LinearLayout
        android:alpha="0.9"
        android:layout_marginTop="5dp"
        android:background="#6d177e"
        android:id="@+id/buttons_container2"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:divider="@drawable/spacer_medium"
        android:orientation="horizontal"
        android:showDividers="middle">

        <ImageView
            android:paddingLeft="10dp"
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:src="@drawable/hit"/>

        <Button
            android:textColor="#f8dbf9"
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:alpha="0.9"
            android:text="HIT FM" />
    </LinearLayout>

    <LinearLayout
        android:alpha="0.9"
        android:layout_marginTop="5dp"
        android:background="#6d177e"
        android:id="@+id/buttons_container3"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:divider="@drawable/spacer_medium"
        android:orientation="horizontal"
        android:showDividers="middle">

        <ImageView
            android:paddingLeft="10dp"
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:src="@drawable/rocks"/>

        <Button
            android:textColor="#f8dbf9"
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:alpha="0.9"
            android:text="Radio Rocks" />
    </LinearLayout>

    <LinearLayout
        android:alpha="0.9"
        android:layout_marginTop="5dp"
        android:background="#6d177e"
        android:id="@+id/buttons_container4"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:divider="@drawable/spacer_medium"
        android:orientation="horizontal"
        android:showDividers="middle">

        <ImageView
            android:paddingLeft="10dp"
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:src="@drawable/melodia"/>

        <Button
            android:textColor="#f8dbf9"
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:alpha="0.9"
            android:text="Melodia FM" />
    </LinearLayout>

    <LinearLayout
        android:alpha="0.9"
        android:layout_marginTop="5dp"
        android:background="#6d177e"
        android:id="@+id/buttons_container5"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:divider="@drawable/spacer_medium"
        android:orientation="horizontal"
        android:showDividers="middle">

        <ImageView
            android:paddingLeft="10dp"
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:src="@drawable/relax"/>

        <Button
            android:textColor="#f8dbf9"
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:alpha="0.9"
            android:text="Radio Relax" />
    </LinearLayout>

    <LinearLayout
        android:alpha="0.9"
        android:layout_marginTop="5dp"
        android:background="#6d177e"
        android:id="@+id/buttons_container6"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:divider="@drawable/spacer_medium"
        android:orientation="horizontal"
        android:showDividers="middle">

        <ImageView
            android:paddingLeft="10dp"
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:src="@drawable/rus"/>

        <Button
            android:textColor="#f8dbf9"
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:alpha="0.9"
            android:text="Rus Radio" />
    </LinearLayout>
    </LinearLayout>
</ScrollView>
